---
import BaseLayout from "@/layouts/BaseLayout.astro";

type BreadCrumb = {
  name: string;
  path: string;
};

interface Props {
  title?: string;
  description?: string;
  breadCrumbsList?: BreadCrumb[];
  noindex?: boolean;
}

const {
  title = "ブログ記事一覧",
  description = "記事一覧です",
  breadCrumbsList = [
    {
      name: "ホーム",
      path: `/`,
    },
    {
      name: "ブログ記事一覧",
      path: `/page/1/`,
    },
  ],
  noindex = false,
} = Astro.props;
---

<BaseLayout
  {title}
  {description}
  context={"home"}
  {breadCrumbsList}
  {noindex}
  heroImage="/top-page-ogp-thum.jpg"
>
  <slot name="banner" slot="banner" />
  <slot />
</BaseLayout>

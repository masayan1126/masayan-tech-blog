  }

  article p:has(.info) {
    background: rgba(76, 175, 80, 0.1);
    border: 1px solid rgba(76, 175, 80, 0.3);
    padding: 1.5rem 1.5rem 1.5rem 3.5rem;
    border-radius: 8px;
    color: #81c784;
    position: relative;
    margin: 1.5rem 0;

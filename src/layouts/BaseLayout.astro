---
import BaseHead from "@/components/BaseHead.astro";
import { BreadCrumbs } from "@/components/BreadCrumbs/BreadCrumbs";
import Footer from "@/features/Footer/Footer.astro";
import Header from "@/features/Header/Header.astro";
import BottomNav from "@/features/Header/BottomNav.astro";
import type { BaseLayoutProps } from "@/layouts/layout";

interface Props extends BaseLayoutProps {}

const { title, description, context, breadCrumbsList, image, noindex } = Astro.props;
---

<html lang="ja">
  <BaseHead {title} {description} {image} {noindex} />

  <body class="mx-auto">
    <!-- ページ読み込みプログレスバー -->
    <div id="progress-bar"></div>
    
    <Header {context} />
    <main class="fadeUp pt-20">
      <slot name="banner" />
      <BreadCrumbs lists={breadCrumbsList} />
      <slot />
    </main>

    <Footer />
    <BottomNav {context} />

    <script>
      // ページ読み込みプログレスバー
      (function() {
        const progressBar = document.getElementById('progress-bar');
        if (!progressBar) return;

        let progress = 0;
        let intervalId = null;

        function startProgress() {
          progress = 0;
          progressBar.style.width = '0%';
          progressBar.style.opacity = '1';

          // ランダムな速度でプログレスバーを進める
          intervalId = setInterval(() => {
            if (progress < 90) {
              const increment = Math.random() * 10 + 5;
              progress += increment;
              if (progress > 90) progress = 90;
              progressBar.style.width = progress + '%';
            }
          }, 200);
        }

        function completeProgress() {
          if (intervalId) clearInterval(intervalId);
          progress = 100;
          progressBar.style.width = '100%';
          
          setTimeout(() => {
            progressBar.style.opacity = '0';
            setTimeout(() => {
              progressBar.style.width = '0%';
            }, 400);
          }, 200);
        }

        // リンククリック時にプログレスバーを開始
        document.addEventListener('click', (e) => {
          const link = e.target.closest('a');
          if (link && link.href && 
              link.href.startsWith(window.location.origin) && 
              !link.href.includes('#') &&
              !link.target) {
            startProgress();
          }
        });

        // ページロード完了時にプログレスバーを完了
        window.addEventListener('load', completeProgress);

        // 初回ロード時
        if (document.readyState === 'complete') {
          completeProgress();
        } else {
          startProgress();
          window.addEventListener('load', completeProgress);
        }
      })();
    </script>

  </body>
</html>

<style is:global>
  /* ページ読み込みプログレスバー */
  #progress-bar {
    position: fixed;
    top: 0;
    left: 0;
    height: 3px;
    width: 0%;
    background: var(--color-primary);
    z-index: 9999;
    transition: width 0.3s ease, opacity 0.4s ease;
    opacity: 0;
  }

  /* モバイル時のボトムナビ用余白 */
  @media (max-width: 767px) {
    body {
      padding-bottom: calc(70px + env(safe-area-inset-bottom, 0px));
    }
  }
</style>

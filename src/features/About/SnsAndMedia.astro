---
import { Link } from "@/components/Link/Link";
import Icon from "astro-icon";
---

<section class="sns-media-section">
  <div class="section-header">
    <Icon name="logos:youtube-icon" class="section-icon" />
    <h2>SNS/メディアでの発信</h2>
  </div>

  <div class="social-links-grid">
    <!-- YouTube -->
    <a 
      href="https://www.youtube.com/@masayan_tech_ai_mcp" 
      target="_blank" 
      rel="noopener noreferrer"
      class="social-card youtube"
    >
      <div class="social-icon-wrapper">
        <Icon name="logos:youtube-icon" class="social-icon" />
      </div>
      <div class="social-content">
        <h3 class="social-title">YouTube</h3>
        <p class="social-desc">技術解説動画を配信中</p>
      </div>
      <div class="social-arrow">→</div>
    </a>

    <!-- GitHub -->
    <a 
      href="https://github.com/masayan1126" 
      target="_blank" 
      rel="noopener noreferrer"
      class="social-card github"
    >
      <div class="social-icon-wrapper">
        <Icon name="mdi:github" class="social-icon" />
      </div>
      <div class="social-content">
        <h3 class="social-title">GitHub</h3>
        <p class="social-desc">オープンソースプロジェクト</p>
      </div>
      <div class="social-arrow">→</div>
    </a>

    <!-- Twitter/X -->
    <a 
      href="https://twitter.com/masayanishigaki" 
      target="_blank" 
      rel="noopener noreferrer"
      class="social-card twitter"
    >
      <div class="social-icon-wrapper">
        <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
        </svg>
      </div>
      <div class="social-content">
        <h3 class="social-title">X (Twitter)</h3>
        <p class="social-desc">技術情報を毎日発信</p>
      </div>
      <div class="social-arrow">→</div>
    </a>
  </div>
</section>

<style>
  .sns-media-section {
    background: #1a1a1a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 2rem;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 2rem;
  }

  .section-icon {
    width: 2rem;
    height: 2rem;
    flex-shrink: 0;
  }

  /* ソーシャルリンクグリッド */
  .social-links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1rem;
  }

  .social-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: #2a2a2a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .social-card:hover {
    border-color: rgba(var(--color-primary-rgb), 0.4);
  }

  /* YouTube */
  .social-card.youtube {
    color: #ff0000;
  }

  /* GitHub */
  .social-card.github {
    color: #ffffff;
  }

  /* Twitter */
  .social-card.twitter {
    color: #1da1f2;
  }

  .social-icon-wrapper {
    flex-shrink: 0;
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #333;
    border-radius: 50%;
  }

  .social-icon {
    width: 2rem;
    height: 2rem;
  }

  .social-content {
    flex: 1;
  }

  .social-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: #f0f0f0;
    margin: 0 0 0.25rem 0;
  }

  .social-desc {
    font-size: 0.875rem;
    color: #d1cfcf;
    margin: 0;
  }

  .social-arrow {
    font-size: 1.5rem;
    color: var(--color-primary);
    font-weight: 700;
    transition: transform 0.3s ease;
  }

  /* レスポンシブ */
  @media (max-width: 768px) {
    .sns-media-section {
      padding: 1.5rem;
    }

    .social-links-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .sns-media-section {
      padding: 1rem;
    }

    .social-card {
      padding: 1.25rem;
    }

    .social-icon-wrapper {
      width: 2.5rem;
      height: 2.5rem;
    }

    .social-icon {
      width: 1.5rem;
      height: 1.5rem;
    }

    .social-title {
      font-size: 1rem;
    }
  }
</style>

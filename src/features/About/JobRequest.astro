    background: #2a2a2a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .contact-text {
    color: #f0f0f0;
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
  }

  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    color: var(--color-primary);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    vertical-align: middle;
  }

  .contact-link:hover {
    color: #FFC857;
    text-decoration: underline;
  }

  .inline-icon {
    width: 1.25rem;
    height: 1.25rem;
    vertical-align: middle;
    margin-bottom: 2px;
  }

  /* ã‚µãƒ¼ãƒ“ã‚¹ã‚°ãƒªãƒƒãƒ‰ */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .service-card {
    position: relative;
    background: #2a2a2a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 1.5rem;
  }

  .service-card.featured {
    border-color: rgba(var(--color-primary-rgb), 0.3);
  }

  .featured-badge {
    position: absolute;
    top: -10px;
    right: 20px;
    background: var(--color-primary);
    color: #0f0f0f;
    font-size: 0.75rem;
    font-weight: 700;
    padding: 0.25rem 0.75rem;
    border-radius: 8px;
  }

  .service-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .service-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .service-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: #f0f0f0;
    margin: 0;
  }

  .service-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .service-item {
    display: flex;
    gap: 0.5rem;
    align-items: flex-start;
    color: #d1cfcf;
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .bullet {
    color: var(--color-primary);
    font-weight: 700;
    flex-shrink: 0;
  }


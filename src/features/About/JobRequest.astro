      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .job-request-section {
      padding: 1rem;
    }

    .contact-card {
      padding: 1rem;
    }

    .service-card {
      padding: 1.25rem;
    }

    .service-title {
      font-size: 1rem;
    }
  }
</style>

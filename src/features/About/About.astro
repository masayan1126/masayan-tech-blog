---
import BlogContents from "./BlogContents.astro";
import SnsAndMedia from "./SnsAndMedia.astro";
import JobRequest from "./JobRequest.astro";
import { SITE_TITLE } from "@/constants/meta";
import { Image } from "astro:assets";
---

<div class="about-page">
  <!-- ヒーローセクション -->
  <section class="hero-section">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">Welcome to {SITE_TITLE}</h1>
        <p class="hero-subtitle">
          フルスタックエンジニアによる技術ブログ。<br />
          モダンな開発手法とクリーンなコードを追求しています。
        </p>
      </div>
      <div class="hero-image">
        <Image
          src={"/miyabiya.png"}
          width={256}
          height={256}
          alt={"西垣雅矢のプロフィール画像"}
          format="avif"
          class="profile-image"
        />
      </div>
    </div>
  </section>

  <!-- コンテンツセクション -->
  <div class="content-grid">
    <BlogContents />
    <JobRequest />
    <SnsAndMedia />
  </div>
</div>

<style>
  .about-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  /* ヒーローセクション */
  .hero-section {
    position: relative;
    margin-bottom: 4rem;
    padding: 3rem 2rem;
    background: linear-gradient(135deg, rgba(20, 20, 20, 0.8) 0%, rgba(30, 30, 30, 0.8) 100%);
    border-radius: 20px;
    border: 1px solid rgba(80, 80, 80, 0.3);
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 30%, rgba(60, 60, 60, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(40, 40, 40, 0.15) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 3rem;
    flex-wrap: wrap;
  }

  .hero-text {
    flex: 1;
    min-width: 300px;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #ffffff 0%, #F3BC45 50%, #E5AD35 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: #f0f0f0;
    line-height: 1.8;
    letter-spacing: 0.02em;
  }

  .hero-image {
    flex-shrink: 0;
  }

  .profile-image {
    width: 180px;
    height: 180px;
    border-radius: 50%;
    border: 3px solid rgba(243, 188, 69, 0.4);
    box-shadow: 0 8px 32px rgba(243, 188, 69, 0.25);
    transition: all 0.3s ease;
  }

  .profile-image:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 48px rgba(243, 188, 69, 0.4);
  }

  /* コンテンツグリッド */
  .content-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* レスポンシブ対応 */
  @media (max-width: 768px) {
    .hero-content {
      flex-direction: column;
      text-align: center;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .profile-image {
      width: 150px;
      height: 150px;
    }
  }

  @media (max-width: 480px) {
    .about-page {
      padding: 1rem 0.5rem;
    }

    .hero-section {
      padding: 2rem 1.5rem;
      margin-bottom: 2rem;
    }

    .hero-title {
      font-size: 1.75rem;
    }

    .profile-image {
      width: 120px;
      height: 120px;
    }
  }
</style>

<style is:global>
  .about-page h2 {
    @apply text-2xl font-bold mb-4;
    color: #F3BC45;
  }

  .about-page ul {
    @apply list-disc px-6;
    color: #d1cfcf;
  }

  .about-page li {
    margin-bottom: 0.5rem;
    line-height: 1.8;
  }
</style>

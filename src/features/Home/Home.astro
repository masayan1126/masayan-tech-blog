import NewArrivalPosts from "./NewArrivalPosts.astro";
import BlogContents from "./BlogContents.astro";
import SnsAndMedia from "./SnsAndMedia.astro";
import JobRequest from "./JobRequest.astro";
---

<HomeLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <div class="home flex flex-col gap-8">
    <div class="mb-5">
      <h1>Welcom to {SITE_TITLE}</h1>
    </div>
    <NewArrivalPosts />
    <BlogContents />
    <JobRequest />
    <SnsAndMedia />
  </div>
</HomeLayout>


---
import type { Course } from "@/libs/microcms/course";
import { Image } from "astro:assets";
import { Icon } from "astro-icon";

type Props = {
  course: Course;
};

const { course } = Astro.props;
---

<div class="course-card">
  <a href={`/courses/${course.id}/`} class="course-card-link">
    <div class="course-card-image-container">
      {course.eyecatch ? (
        <>
          <Image
            src={course.eyecatch.url}
            width={512}
            height={288}
            alt={course.title}
            format="avif"
            class="course-card-image"
          />
          <div class="course-card-overlay"></div>
        </>
      ) : (
        <div class="course-card-placeholder">
          <Icon name="ph:graduation-cap-bold" class="placeholder-icon" />
          <span class="placeholder-title">{course.title}</span>
        </div>
      )}
    </div>

    <div class="course-card-body">
      <h3 class="course-card-title">{course.title}</h3>
      <p class="course-card-description">{course.description}</p>

      <div class="course-card-meta">
        <div class="meta-item">
          <Icon name="ph:book-open-bold" class="meta-icon" />
          <span>{course.lessons.length} レッスン</span>
        </div>
      </div>
    </div>
  </a>
</div>

<style>
  .course-card {
    position: relative;
    overflow: hidden;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.02);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .course-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(var(--color-primary-rgb), 0.2);
    border-color: rgba(var(--color-primary-rgb), 0.3);
    background: rgba(255, 255, 255, 0.05);
  }

  .course-card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .course-card-image-container {
    position: relative;
    overflow: hidden;
  }

  .course-card-image {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .course-card:hover .course-card-image {
    transform: scale(1.05);
  }

  .course-card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(var(--color-primary-rgb), 0.12),
      rgba(var(--color-primary-rgb), 0.06)
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .course-card:hover .course-card-overlay {
    opacity: 1;
  }

  .course-card-placeholder {
    width: 100%;
    aspect-ratio: 16 / 9;
    background: var(--color-bg-tertiary);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
    gap: 0.75rem;
  }

  .placeholder-icon {
    width: 48px;
    height: 48px;
    color: var(--color-primary);
    opacity: 0.5;
  }

  .placeholder-title {
    color: var(--color-text-muted);
    font-size: 1rem;
    font-weight: 600;
    text-align: center;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .course-card-body {
    padding: 1.25rem;
  }

  .course-card-title {
    font-size: 1.1rem;
    font-weight: 700;
    line-height: 1.5;
    color: var(--color-text);
    margin-bottom: 0.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color 0.2s ease;
  }

  .course-card:hover .course-card-title {
    color: var(--color-primary);
  }

  .course-card-description {
    font-size: 0.85rem;
    line-height: 1.6;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .course-card-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--color-border);
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8rem;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
  }

  .meta-icon {
    width: 16px;
    height: 16px;
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .course-card:hover {
      transform: translateY(-4px) scale(1.01);
      box-shadow: 0 12px 25px rgba(var(--color-primary-rgb), 0.15);
    }

    .course-card:hover .course-card-image {
      transform: scale(1.03);
    }
  }
</style>

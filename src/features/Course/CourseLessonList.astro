---
import type { Course } from "@/libs/microcms/course";
import { Icon } from "astro-icon";

type Props = {
  course: Course;
  currentLesson?: number;
};

const { course, currentLesson } = Astro.props;
---

<div class="lesson-list-section">
  <div class="section-header">
    <Icon name="ph:list-numbers-bold" class="section-header-icon" />
    <h2 class="section-title">LESSONS</h2>
    <span class="section-subtitle">レッスン一覧</span>
  </div>

  <ol class="lesson-list">
    {course.lessons.map((lesson, index) => {
      const lessonNum = index + 1;
      const isCurrent = currentLesson === lessonNum;
      return (
        <li class:list={["lesson-item", { current: isCurrent }]}>
          <a
            href={`/courses/${course.id}/lessons/${lessonNum}/`}
            class="lesson-link"
            aria-current={isCurrent ? "page" : undefined}
          >
            <span class="lesson-number">{String(lessonNum).padStart(2, "0")}</span>
            <div class="lesson-info">
              <span class="lesson-title">{lesson.lesson_title}</span>
              {lesson.estimated_minutes && (
                <span class="lesson-duration">
                  <Icon name="ph:clock-bold" class="duration-icon" />
                  {lesson.estimated_minutes}分
                </span>
              )}
            </div>
            <Icon name="ph:caret-right-bold" class="lesson-arrow" />
          </a>
        </li>
      );
    })}
  </ol>
</div>

<style>
  .lesson-list-section {
    padding: 2rem;
    background: var(--color-bg-secondary);
    border-radius: 8px;
    border: 1px solid var(--color-border);
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .section-header-icon {
    width: 24px;
    height: 24px;
    color: var(--color-primary);
  }

  .section-title {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--color-primary);
    letter-spacing: 0.1em;
    margin: 0;
    padding: 0;
    border: none;
  }

  .section-subtitle {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-left: auto;
  }

  .lesson-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .lesson-item {
    border-radius: 6px;
    transition: background 0.2s ease;
  }

  .lesson-item::before {
    content: none;
  }

  .lesson-item.current {
    background: rgba(var(--color-primary-rgb), 0.1);
    border: 1px solid rgba(var(--color-primary-rgb), 0.3);
  }

  .lesson-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    text-decoration: none;
    color: inherit;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .lesson-link:hover {
    background: var(--color-bg-tertiary);
  }

  .lesson-item.current .lesson-link:hover {
    background: rgba(var(--color-primary-rgb), 0.15);
  }

  .lesson-number {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    background: var(--color-bg-tertiary);
    border-radius: 4px;
    font-family: var(--font-mono);
    font-size: 0.8rem;
    font-weight: 700;
    color: var(--color-text-muted);
  }

  .lesson-item.current .lesson-number {
    background: var(--color-primary);
    color: var(--color-bg);
  }

  .lesson-info {
    flex: 1;
    min-width: 0;
  }

  .lesson-title {
    display: block;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.5;
    transition: color 0.2s ease;
  }

  .lesson-link:hover .lesson-title {
    color: var(--color-primary);
  }

  .lesson-item.current .lesson-title {
    color: var(--color-primary);
  }

  .lesson-duration {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    margin-top: 0.25rem;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
  }

  .duration-icon {
    width: 12px;
    height: 12px;
  }

  .lesson-arrow {
    flex-shrink: 0;
    width: 16px;
    height: 16px;
    color: var(--color-text-muted);
    opacity: 0.3;
    transition: all 0.2s ease;
  }

  .lesson-link:hover .lesson-arrow {
    opacity: 1;
    color: var(--color-primary);
    transform: translateX(4px);
  }

  @media (max-width: 640px) {
    .lesson-list-section {
      padding: 1.5rem;
    }

    .section-subtitle {
      display: none;
    }

    .lesson-link {
      padding: 0.75rem;
      gap: 0.75rem;
    }
  }
</style>

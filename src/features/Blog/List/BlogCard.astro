---
import type { Article } from "@/libs/microcms/blog";
import { Image } from "astro:assets";
import FormattedDate from "@/components/FormattedDate.astro";
import BlogListLink from "@/features/Blog/List/BlogListLink.astro";
import { Icon } from "astro-icon";
type Props = {
  post: Article;
};

const { post } = Astro.props;
---

<div class="card card-skin modern-card">
  <BlogListLink href={`/blog/${post.id}/`} class="card-link">
    <!-- <div class="card-image-container">
      <Image
        src={post.eyecatch.url}
        width={512}
        height={288}
        alt={post.title}
        format="avif"
        class="card-image"
      />
      <div class="card-overlay"></div>
    </div> -->

    <div class="card__textbox">
      <div class="text-sm">タグ、閲覧数など表示</div>
      <div class="text-sm">
        <Icon name="noto:calendar" class="w-5 h-5 mr-1 inline-block align-middle text-gray-300" />
        <FormattedDate date={new Date(post.publishedAt)} />
      </div>
    </div>
  </BlogListLink>
</div>

<style>
  .modern-card {
    height: auto;
    position: relative;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
  }

  .modern-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(var(--color-primary-rgb), 0.2);
  }

  .card__textbox {
    width: 100%;
    height: auto;
    padding: 20px 18px;
    box-sizing: border-box;
    color: var(--dark-mode-text-color);
    position: relative;
    z-index: 2;
  }

  .card-skin {
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    background: rgba(255, 255, 255, 0.02);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.08);
  }
  
  .card-image-container {
    position: relative;
    overflow: hidden;
  }
  
  .card-image {
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    width: 100%;
    height: auto;
  }
  
  .card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(var(--color-primary-rgb), 0.12), rgba(var(--color-primary-rgb), 0.06));
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }
  
  .modern-card:hover .card-image {
    transform: scale(1.05);
  }
  
  .modern-card:hover .card-overlay {
    opacity: 1;
  }
  
  .modern-card:hover .card-skin {
    border: 1px solid rgba(var(--color-primary-rgb), 0.3);
    background: rgba(255, 255, 255, 0.05);
  }
  
  :global(.card-link) {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  /* モバイル対応 */
  @media (max-width: 768px) {
    .modern-card:hover {
      transform: translateY(-4px) scale(1.01);
      box-shadow: 0 12px 25px rgba(var(--color-primary-rgb), 0.15);
    }
    
    .modern-card:hover .card-image {
      transform: scale(1.03);
    }
  }
</style>

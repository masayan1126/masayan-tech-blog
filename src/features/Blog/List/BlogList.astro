---
import type { Blog } from "@/libs/microcms/blog";
import BlogCardSide from "./BlogCardSide.astro";

type Props = {
  posts: Blog[];
};

const { posts } = Astro.props;
---

<section class="mb-20">
  <div class="gap-14 grid grid-cols-1 lg:grid-cols-2">
    {posts.map((post) => <BlogCardSide post={post} />)}
  </div>
</section>

    background: rgba(var(--color-primary-rgb), 0.15);
    color: #F3BC45;
    border: 1px solid rgba(var(--color-primary-rgb), 0.3);
  }

  .skill-tag.highlight {
    background: linear-gradient(135deg, rgba(var(--color-primary-rgb), 0.2), rgba(243, 188, 69, 0.2));
    color: #f5ca6d;
    border-color: rgba(var(--color-primary-rgb), 0.4);
    font-weight: 600;
  }

<style>
  .aside-profile-container {
    @apply mx-auto overflow-hidden;
    max-width: 350px;
    margin-left: 0;
    background: rgba(37, 37, 37, 0.6);
    box-shadow: 0 8px 32px 0 rgba(var(--color-secondary-rgb), 0.2);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: 10px;
    border: 1px solid rgba(var(--color-secondary-rgb), 0.25);
  }

  .aside-profile-container > img {
    width: 100px;
  }

  .name-gradient {
    background: linear-gradient(135deg, #ffffff 0%, #7a9f52 50%, #8fb166 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .profile-section {
    @apply mb-4;
  }

  .section-title {
    @apply text-xs font-semibold mb-2 flex items-center gap-2;
    letter-spacing: 0.05em;
    color: #a4c78a;
  }

  .section-icon {
    @apply text-sm;
  }

  .tags-container {
    @apply flex flex-wrap gap-2;
  }

  .skill-tag {
    @apply inline-block px-3 py-1 text-xs font-medium rounded-full;
    background: rgba(var(--color-secondary-rgb), 0.15);
    color: #8fb166;
    border: 1px solid rgba(var(--color-secondary-rgb), 0.3);
    transition: all 0.3s ease;
  }

  .skill-tag:hover {
    background: rgba(var(--color-secondary-rgb), 0.25);
    border-color: rgba(var(--color-secondary-rgb), 0.5);
    transform: translateY(-1px);
  }

  .skill-tag.highlight {
    background: linear-gradient(135deg, rgba(var(--color-secondary-rgb), 0.2), rgba(122, 159, 82, 0.2));
    color: #a4c78a;
    border-color: rgba(var(--color-secondary-rgb), 0.4);
    font-weight: 600;
  }

  .skill-tag.highlight:hover {
    background: linear-gradient(135deg, rgba(var(--color-secondary-rgb), 0.3), rgba(122, 159, 82, 0.3));
    border-color: rgba(var(--color-secondary-rgb), 0.6);
  }
</style>

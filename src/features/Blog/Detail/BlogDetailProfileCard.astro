---
import { Image } from "astro:assets";
import { Icon } from "astro-icon";
---

<div class="profile-card">
  <div class="profile-header">
    <div class="profile-avatar-wrapper">
      <Image
        src={"/miyabiya.webp"}
        width={80}
        height={80}
        alt={"西垣雅矢のプロフィール画像"}
        format="avif"
        class="profile-avatar"
      />
      <div class="avatar-status"></div>
    </div>
    <div class="profile-info">
      <h2 class="profile-name">masayan</h2>
      <p class="profile-role">Full Stack Engineer</p>
      <p class="profile-location">
        <Icon name="ph:map-pin-bold" class="location-icon" />
        大阪, Japan
      </p>
    </div>
  </div>
  
  <div class="profile-body">
    <div class="profile-section">
      <div class="section-label">
        <Icon name="ph:code-bold" class="section-icon" />
        <span>SPECIALTIES</span>
      </div>
      <div class="tags-container">
        <span class="skill-tag">MCP Server</span>
        <span class="skill-tag">Clean Architecture</span>
        <span class="skill-tag">Test Automation</span>
      </div>
    </div>
    
    <div class="profile-section">
      <div class="section-label">
        <Icon name="ph:lightning-bold" class="section-icon" />
        <span>FOCUS</span>
      </div>
      <div class="tags-container">
        <span class="skill-tag highlight">AI-Driven Dev</span>
        <span class="skill-tag highlight">Claude Code</span>
      </div>
    </div>
  </div>
  
  <a href="/about" class="profile-link">
    <span>プロフィールを見る</span>
    <Icon name="ph:arrow-right-bold" class="link-icon" />
  </a>
</div>

<style>
  .profile-card {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    overflow: hidden;
  }

  .profile-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .profile-avatar-wrapper {
    position: relative;
    flex-shrink: 0;
  }

  .profile-avatar {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    border: 2px solid rgba(var(--color-primary-rgb), 0.3);
  }

  .avatar-status {
    position: absolute;
    bottom: 2px;
    right: 2px;
    width: 12px;
    height: 12px;
    background: #10b981;
    border: 2px solid var(--color-bg-tertiary);
    border-radius: 50%;
  }

  .profile-info {
    flex: 1;
    min-width: 0;
  }

  .profile-name {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text);
    margin: 0 0 0.25rem 0;
  }

  .profile-role {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-primary);
    margin: 0 0 0.375rem 0;
  }

  .profile-location {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  .location-icon {
    width: 14px;
    height: 14px;
  }

  .profile-body {
    padding: 1.25rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .profile-section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .section-label {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-family: var(--font-mono);
    font-size: 0.625rem;
    font-weight: 600;
    color: var(--color-text-muted);
    letter-spacing: 0.1em;
  }

  .section-icon {
    width: 12px;
    height: 12px;
    color: var(--color-primary);
  }

  .tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .skill-tag {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    background: rgba(var(--color-primary-rgb), 0.1);
    border: 1px solid rgba(var(--color-primary-rgb), 0.2);
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 500;
    color: var(--color-primary);
  }

  .skill-tag.highlight {
    background: rgba(var(--color-primary-rgb), 0.15);
    border-color: rgba(var(--color-primary-rgb), 0.3);
    font-weight: 600;
  }

  .profile-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    background: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border);
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--color-text-muted);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .profile-link:hover {
    background: var(--color-bg-tertiary);
    color: var(--color-primary);
  }

  .link-icon {
    width: 14px;
    height: 14px;
    transition: transform 0.2s ease;
  }

  .profile-link:hover .link-icon {
    transform: translateX(4px);
  }
</style>

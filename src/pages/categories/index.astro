---
import { getCategories } from "@/libs/microcms/category";
import { getArticles } from "@/libs/microcms/blog";
import BaseLayout from "@/layouts/BaseLayout.astro";

const title = "カテゴリー一覧";

const breadCrumbsList = [
  {
    name: title,
    path: `/categories/`,
  },
];

// カテゴリー一覧を取得
const categoriesRes = await getCategories();
const categories = categoriesRes.contents;

// 全記事を取得してカテゴリごとの記事数をカウント
const allArticlesRes = await getArticles();
const allArticles = allArticlesRes.contents;

// カテゴリーごとの記事数を計算
const categoriesWithCount = categories.map((category) => {
  const count = allArticles.filter((article) =>
    article.category.some((c) => c.id === category.id)
  ).length;
  return {
    ...category,
    count,
  };
});

// 記事が5件以上のカテゴリーのみをフィルタリング
const filteredCategories = categoriesWithCount.filter((category) => category.count >= 5);

// 記事数の多い順にソート
const sortedCategories = filteredCategories.sort((a, b) => b.count - a.count);
---

<BaseLayout
  {title}
  description="ブログのカテゴリー一覧ページです"
  context="categories"
  {breadCrumbsList}
  heroImage="/top-page-ogp-thum.jpg"
>
  <div class="categories-container">
    <p class="page-description">
      全{sortedCategories.length}カテゴリー
    </p>

    <div class="categories-grid">
      {
        sortedCategories.map((category) => (
          <a
            href={`/category/${category.id}/page/1`}
            class="category-card"
          >
            <div class="category-header">
              <h2 class="category-name">{category.name}</h2>
              <span class="category-count">{category.count}件</span>
            </div>
            <div class="category-footer">
              <span class="view-link">記事を見る →</span>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</BaseLayout>

<style>
  .categories-container {

    margin: 0 auto;
  }

  .page-title {
    @apply text-3xl font-bold mb-4;
    color: var(--text-color);
  }

  .page-description {
    @apply text-lg mb-8;
    color: rgba(255, 255, 255, 0.7);
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .category-card {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 1.5rem;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.02);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
    min-height: 120px;
    overflow: hidden;
  }

  .category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(127, 167, 255, 0.1), rgba(127, 167, 255, 0.05));
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
    z-index: 0;
  }

  .category-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(127, 167, 255, 0.15);
    border: 1px solid rgba(127, 167, 255, 0.2);
    background: rgba(255, 255, 255, 0.05);
  }

  .category-card:hover::before {
    opacity: 1;
  }

  .category-header {
    position: relative;
    z-index: 1;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .category-name {
    @apply text-xl font-semibold;
    color: var(--text-color);
    margin: 0;
    flex: 1;
    transition: color 0.3s ease;
  }

  .category-card:hover .category-name {
    color: rgba(127, 167, 255, 0.9);
  }

  .category-count {
    @apply text-sm font-medium;
    color: rgba(127, 167, 255, 0.9);
    background-color: rgba(127, 167, 255, 0.15);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    white-space: nowrap;
    border: 1px solid rgba(127, 167, 255, 0.2);
    transition: all 0.3s ease;
  }

  .category-card:hover .category-count {
    background-color: rgba(127, 167, 255, 0.25);
    border-color: rgba(127, 167, 255, 0.4);
  }

  .category-footer {
    position: relative;
    z-index: 1;
    display: flex;
    justify-content: flex-end;
  }

  .view-link {
    @apply text-sm font-medium;
    color: rgba(127, 167, 255, 0.8);
    transition: all 0.3s ease;
  }

  .category-card:hover .view-link {
    color: rgba(127, 167, 255, 1);
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .categories-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .page-title {
      @apply text-2xl;
    }

    .category-name {
      @apply text-lg;
    }

    .category-card:hover {
      transform: translateY(-4px) scale(1.01);
      box-shadow: 0 12px 25px rgba(127, 167, 255, 0.1);
    }
  }
</style>

---
import { getArticles } from "@/libs/microcms/blog";
import type { GetStaticPathsOptions } from "astro";
import BlogListLayout from "@/layouts/BlogListLayout.astro";
import Pagination from "@/features/Pagination/Pagination.astro";
import { BlogList } from "@/features/Blog/List/BlogList";
import { BlogListWithSearch } from "@/features/Blog/List/BlogListWithSearch";
import { BlogCategoryTabs } from "@/features/Blog/List/BlogCategoryTabs";
import type { Pagination as ArticlePagination } from "@/types/pagination";
import { CATEGORY_LIST } from "@/features/Blog/List/constants/categories";

export const prerender = true;

type Props = ArticlePagination;

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const res = await getArticles();
  const posts = res.contents;

  return paginate(posts, {
    pageSize: 10,
  });
}

const { page } = Astro.props;
const articles = page.data;

// 全記事データを取得（検索用）
const allArticlesRes = await getArticles();
const allArticles = allArticlesRes.contents;

// 各カテゴリの記事数をカウント
const categoriesWithCount = CATEGORY_LIST.map(cat => {
  const count = allArticles.filter(article =>
    article.category.some(c => c.id === cat.id)
  ).length;
  return { ...cat, count };
});

const newArrivalPosts = [...articles].sort((a, b) => {
  return a.publishedAt > b.publishedAt ? -1 : 1;
});
---

<BlogListLayout>
  <!-- 信頼性メッセージバナー -->
  <div slot="banner" class="quality-banner">
    <div class="quality-banner-content">
      <div class="quality-icon">
        <img src="/miyabiya.webp" alt="西垣雅矢" class="author-image" width="56" height="56" />
      </div>
      <div class="quality-text">
        <h3 class="quality-title">『AIよりも深く掘り下げて』、<br>『公式ドキュメントよりもわかりやすく』</h3>
        <p class="quality-description">
          をコンセプトとしたディープなテックブログです。<br><br>
          AI生成の薄っぺらい記事ではなく、実務で培った深い知見をもとに、公式ドキュメントの難解さをわかりやすい言葉で届けます。
        </p>
      </div>
    </div>
  </div>

  <BlogCategoryTabs
    categories={categoriesWithCount}
    totalArticles={allArticles.length}
    currentCategoryId={null}
    client:load
  />

  <!-- 検索機能付きブログリスト -->
  <BlogListWithSearch
    allArticles={allArticles}
    initialArticles={newArrivalPosts}
    currentPage={page.currentPage}
    totalPages={page.lastPage}
    totalArticles={page.total}
    pageSize={page.size}
    client:load
  />
</BlogListLayout>

<style>
  .quality-banner {
    margin: 2rem 0;
    width: 100%;
  }

  .quality-banner-content {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 2rem;
    background: rgba(243, 188, 69, 0.15);
    border: 2px solid rgba(243, 188, 69, 0.4);
    border-radius: 16px;
  }

  .quality-icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background: rgba(243, 188, 69, 0.25);
    border: 2px solid rgba(243, 188, 69, 0.5);
    border-radius: 50%;
    overflow: hidden;
  }

  .author-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .quality-text {
    flex: 1;
  }

  .quality-title {
    margin: 0 0 1rem 0;
    font-size: 1.5rem;
    font-weight: 700;
    color: #F3BC45;
    letter-spacing: 0.02em;
    line-height: 1.4;
  }

  @media (max-width: 768px) {
    .quality-title {
      font-size: 1.25rem;
    }
  }

  .title-white {
    color: #ffffff;
  }

  .quality-description {
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.7;
    color: #d1cfcf;
  }

  @media (max-width: 768px) {
    .quality-banner {
      margin: 1.5rem auto;
    }

    .quality-banner-content {
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 1.5rem;
      gap: 1rem;
    }

    .quality-icon {
      width: 48px;
      height: 48px;
    }

    .quality-title {
      font-size: 1.1rem;
    }

    .quality-description {
      font-size: 0.9rem;
    }
  }
</style>

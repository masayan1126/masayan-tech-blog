---
import { getArticles } from "@/libs/microcms/blog";
import type { GetStaticPathsOptions } from "astro";
import BlogListLayout from "@/layouts/BlogListLayout.astro";
import Pagination from "@/features/Pagination/Pagination.astro";
import { BlogList } from "@/features/Blog/List/BlogList";
import { BlogListWithSearch } from "@/features/Blog/List/BlogListWithSearch";
import { BlogCategoryTabs } from "@/features/Blog/List/BlogCategoryTabs";
import type { Pagination as ArticlePagination } from "@/types/pagination";
import { CATEGORY_LIST } from "@/features/Blog/List/constants/categories";
import { Image } from "astro:assets";
import profileImage from "@/assets/images/miyabiya.webp";

export const prerender = true;

type Props = ArticlePagination;

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const res = await getArticles();
  const posts = res.contents;

  return paginate(posts, {
    pageSize: 10,
  });
}

const { page } = Astro.props;
const articles = page.data;

// 全記事データを取得（検索用）
const allArticlesRes = await getArticles();
const allArticles = allArticlesRes.contents;

// 各カテゴリの記事数をカウント
const categoriesWithCount = CATEGORY_LIST.map(cat => {
  const count = allArticles.filter(article =>
    article.category.some(c => c.id === cat.id)
  ).length;
  return { ...cat, count };
});

const newArrivalPosts = [...articles].sort((a, b) => {
  return a.publishedAt > b.publishedAt ? -1 : 1;
});
---

<BlogListLayout>
  <!-- 信頼性メッセージバナー -->
  <div slot="banner" class="quality-banner">
    <div class="quality-banner-inner">
      <div class="banner-badge">Concept</div>
      <div class="banner-content">
        <div class="author-profile">
          <div class="author-icon-wrapper">
            <Image src={profileImage} width={64} height={64} alt="西垣雅矢" format="avif" class="author-image" />
          </div>
          <div class="author-role">Tech Lead / Full Stack Engineer</div>
        </div>
        <div class="text-content">
          <h3 class="banner-title">
            <span class="highlight">『AIよりも深く掘り下げて』</span><br class="mobile-break" />
            <span class="highlight">『公式ドキュメントよりもわかりやすく』</span>
          </h3>
          <p class="banner-description">
            AI生成の薄っぺらい記事ではなく、実務で培った<span class="text-accent">深い知見</span>をもとに、<br class="desktop-break" />
            公式ドキュメントの<span class="text-accent">難解さをわかりやすい言葉</span>で届けます。
          </p>
        </div>
      </div>
    </div>
  </div>

  <BlogCategoryTabs
    categories={categoriesWithCount}
    totalArticles={allArticles.length}
    currentCategoryId={null}
    client:load
  />

  <!-- 検索機能付きブログリスト -->
  <BlogListWithSearch
    allArticles={allArticles}
    initialArticles={newArrivalPosts}
    currentPage={page.currentPage}
    totalPages={page.lastPage}
    totalArticles={page.total}
    pageSize={page.size}
    client:load
  />
</BlogListLayout>

<style>
  .quality-banner {
    margin: 3rem 0;
    width: 100%;
    position: relative;
  }

  .quality-banner-inner {
    position: relative;
    padding: 3rem;
    background: #1a1a1a;
    border: 1px solid rgba(243, 188, 69, 0.3);
    border-radius: 4px;
    overflow: hidden;
  }

  /* 装飾的なコーナーアクセント */
  .quality-banner-inner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: var(--color-primary);
  }

  .banner-badge {
    position: absolute;
    top: 0;
    right: 2rem;
    background: var(--color-primary);
    color: #1a1a1a;
    font-size: 0.75rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0.5rem 1.5rem;
    clip-path: polygon(0 0, 100% 0, 100% 85%, 50% 100%, 0 85%);
  }

  .banner-content {
    display: flex;
    gap: 3rem;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .author-profile {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    min-width: 120px;
  }

  .author-icon-wrapper {
    position: relative;
    width: 80px;
    height: 80px;
    padding: 4px;
    border: 1px solid rgba(243, 188, 69, 0.5);
    border-radius: 50%;
  }

  .author-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    filter: grayscale(20%);
  }

  .author-role {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-align: center;
  }

  .text-content {
    flex: 1;
  }

  .banner-title {
    font-size: 1.75rem;
    font-weight: 700;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-feature-settings: "palt";
  }

  .highlight {
    background: linear-gradient(transparent 70%, rgba(243, 188, 69, 0.15) 70%);
    color: #f0f0f0;
    padding: 0 0.25rem;
  }

  .banner-description {
    font-size: 1rem;
    line-height: 2;
    color: #cccccc;
    font-weight: 400;
  }

  .text-accent {
    color: var(--color-primary);
    font-weight: 600;
  }

  .mobile-break {
    display: none;
  }

  .desktop-break {
    display: block;
  }

  @media (max-width: 900px) {
    .banner-content {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .quality-banner-inner {
      padding: 2.5rem 1.5rem;
    }

    .quality-banner-inner::before {
      width: 100%;
      height: 4px;
    }

    .banner-title {
      font-size: 1.4rem;
      line-height: 1.5;
    }

    .mobile-break {
      display: block;
    }

    .desktop-break {
      display: none;
    }
  }
</style>
